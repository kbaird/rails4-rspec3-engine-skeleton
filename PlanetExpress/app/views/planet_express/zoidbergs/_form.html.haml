= form_for @zoidberg do |f|
  - if @zoidberg.errors.any?
    #error_explanation
      %h2= "#{pluralize(@zoidberg.errors.count, "error")} prohibited this zoidberg from being saved:"
      %ul
        - @zoidberg.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
