<h1>Listing zoidbergs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zoidbergs.each do |zoidberg| %>
      <tr>
        <td><%= zoidberg.name %></td>
        <td><%= link_to 'Show', zoidberg %></td>
        <td><%= link_to 'Edit', edit_zoidberg_path(zoidberg) %></td>
        <td><%= link_to 'Destroy', zoidberg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Zoidberg', new_zoidberg_path %>
